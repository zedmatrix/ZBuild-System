#!/bin/bash

LFS=/mnt/lfs
ROOT=vdc3
SWAP=vdc2
echo "* Mounting $LFS to /dev/$ROOT *"

if [ -d $LFS ]; then
	mkdir -pv $LFS
fi

mount -v -t ext4 /dev/$ROOT $LFS
swapon -v /dev/$SWAP

export LFS
echo "* Creating $LFS/BUILD"
mkdir -pv $LFS/BUILD
echo "* Chapter 3 Packages and Patches: $LFS/opt/source *"
mkdir -pv $LFS/opt/source
