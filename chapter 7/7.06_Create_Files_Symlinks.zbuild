#!/bin/bash
if [ -z "$BUILD_SOURCE" ]; then
   echo "Error: Can't Find the \$BUILD_SOURCE. Exiting."
   exit 1
fi

echo "* Creating mtab and hosts *"
ln -sv /proc/self/mounts /etc/mtab
cp -v $BUILD_SOURCE/7.06.hosts.zbuild /etc/hosts

echo "* Creating /etc/passwd file *"
cp -v $BUILD_SOURCE/7.06.passwd.zbuild /etc/passwd

echo "* Creating /etc/group file *"
cp -v $BUILD_SOURCE/7.06.group.zbuild /etc/group

echo "* Localedef *"
localedef -i C -f UTF-8 C.UTF-8
install -o tester -d /home/tester
